<h1>Articles</h1>

<div class="d-flex justify-content-end">
  <a href="<%= new_post_path %>" class="btn btn-success">Nouveau</a>
</div>
<div class="row row-cols-1 row-cols-md-3 g-4 mt-4">

  <% @posts.each do |post| %>
    <div class="col">
      <div class="card">
        <div class="card-header">
          <%= post.title %>
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p><%= post.content %></p>
            <footer class="blockquote-footer">Author: <cite title="<%= post.author %>"><%= post.author %></cite></footer>
          </blockquote>
          <br>
          <div class="d-flex gap-1">
          <a class="btn btn-primary" href="<%= post_path(post.id) %>">Lire plus</a>
          <a class="btn btn-success" href="<%= edit_post_path(post.id) %>">Editer</a>
<!--          <a class="btn btn-danger" href="<%#= post_path(post.id) %>" data-method="DELETE" data-confirm="Confirmer ?">Supprimer</a>-->

            <%= form_for post, url: post_path(post.id), method: :delete do |f| %>
              <%= f.submit 'Supprimer', class: 'btn btn-danger', onclick: "return window.confirm('confirmer ?')" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>